# ========================
# 🌍 Configuración servidor (producción)
# ========================
NODE_ENV=production
PORT=5000
PUBLIC_URL=https://api.redvelvetlive.com
SITE_URL=https://redvelvetlive.com

# ========================
# 🔐 Seguridad
# ========================
JWT_SECRET=dev-secret

# ========================
# 🌐 CORS / Cookies
# ========================
CORS_ORIGIN=https://redvelvetlive.com
COOKIE_SAMESITE=lax
COOKIE_SECURE=true

# ========================
# 📦 Storage
# ========================
STORAGE_DRIVER=local
S3_PUBLIC_BASE_URL=https://redvelvetlive.com/assets

# ========================
# 🎥 Livepeer
# ========================
LIVEPEER_API_KEY=
LIVEPEER_BASE_URL=https://livepeer.studio/api

# ========================
# 🔗 Blockchain
# ========================
RPC_URL=https://bsc-dataseed.binance.org
CHAIN_ID=56
PRIVATE_KEY=

# ========================
# 📑 Blog
# ========================
BLOG_DIR=frontend/public/client/blog

